<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordautomata.PrimaryController">
    <!-- Top Section -->
   <top>
      <HBox spacing="10" styleClass="RedBorder">
         <Button text="Button 1" />
         <Button text="Button 2" />
         <Button text="Button 3" />
         <Region HBox.hgrow="ALWAYS" /> <!-- spazio tra i bottoni prima e menu -->
         <Label text="STATUS:" />
         <Label fx:id="statusLabel" text="not running"/>
      </HBox>
   </top>

   <center>
      <SplitPane orientation="HORIZONTAL" styleClass="BlueBorder" dividerPositions="0.7">
         <!-- Left Section -->
         <GridPane styleClass="GreenBorder">
            <!-- Prima riga: Label e Button sulla stessa riga -->
            <Button styleClass="RunButton" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Button styleClass="BlackBorder" text="Option" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <!-- Seconda riga: Main Content -->
            <VBox spacing="10" styleClass="YellowBorder" VBox.vgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnSpan="2">
                  <Label text="Main Content" 
                        maxWidth="Infinity" 
                        maxHeight="Infinity" 
                        VBox.vgrow="ALWAYS"/>
            </VBox>
         </GridPane>
         
         <!-- Right Section -->
         <ScrollPane fitToWidth="true" prefWidth="100" maxWidth="200" minWidth="100" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="RedBorder">
            <VBox fx:id="nodeEdgeList" spacing="10" alignment="TOP_LEFT">
               <!-- Elementi aggiunti dinamicamente nel Controller -->
            </VBox>
         </ScrollPane>
      </SplitPane>
   </center>
</BorderPane>